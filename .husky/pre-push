#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "üöÄ Running pre-push quality gates..."

# Run full test suite with coverage
echo "üß™ Running full test suite with coverage..."
npm test -- --coverage --watchAll=false

# Check coverage thresholds
echo "üìä Checking coverage thresholds..."
COVERAGE_OUTPUT=$(npm test -- --coverage --watchAll=false --silent 2>&1)
COVERAGE_PERCENT=$(echo "$COVERAGE_OUTPUT" | grep "All files" | grep -o "[0-9]\+\.[0-9]\+" | head -1)

if [ ! -z "$COVERAGE_PERCENT" ]; then
  echo "Current coverage: ${COVERAGE_PERCENT}%"
  # Coverage threshold check: require at least 33% for current status
  COVERAGE_INT=$(echo "$COVERAGE_PERCENT" | cut -d'.' -f1)
  if [ "$COVERAGE_INT" -lt 33 ]; then
    echo "‚ùå Coverage ${COVERAGE_PERCENT}% is below minimum threshold of 33%"
    exit 1
  else
    echo "‚úÖ Coverage ${COVERAGE_PERCENT}% meets minimum threshold (33%)"
  fi
else
  echo "‚ö†Ô∏è Could not determine coverage percentage"
fi

# Build verification
echo "üî® Building application..."
npm run build

# Security audit
echo "üîê Running security audit..."
# Use official npm registry for audit
npm audit --audit-level=moderate --registry=https://registry.npmjs.org/ || {
  echo "‚ö†Ô∏è  Security audit failed, but proceeding (may be registry issue)"
}

# Check for production warnings in README
echo "üìñ Checking documentation..."
if ! grep -q "NOT PRODUCTION READY" README.md; then
  echo "‚ö†Ô∏è  Warning: README.md missing production warning"
fi

echo "‚úÖ Pre-push checks completed!" 